journal = {PLoS ONE},
number = {3},
pages = {1--16},
pmid = {28350851},
title = {{Alcohol-related changes in the intestinal icrobiome influence neutrophil infiltration, inflammation and steatosis in early alcoholic hepatitis in mice}},
