isbn = {1000087107},
issn = {0022-3166},
journal = {The Journal of Nutrition},
keywords = {bifidobacteria,oligosaccharides,rats,short-chain fatty acids},
number = {1},
pages = {130--136},
pmid = {9040556},
title = {{Selected indigestible oligosaccharides affect large bowel mass, cecal and fecal short-chain fatty acids, pH and microflora in rats.}},
volume = {127},
year = {1997}
